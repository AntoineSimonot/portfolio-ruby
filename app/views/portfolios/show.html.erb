<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title%></h1>

            <hr>

            <em><%= @portfolio_item.subtitle%></em>
            <br><br>
            <p><%= @portfolio_item.body%></p>


            <% for techno in @portfolio_item.technologies %>
                <p><%= techno.name %></p>
            <% end %>

            <%= link_to "View all items", portfolios_path %>
        </div>
    </div>
</div>




    